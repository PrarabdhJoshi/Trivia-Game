<h1>Welcome#play</h1>
<p>Find me in app/views/welcome/play.html.erb</p>

<%= link_to "Logout", :logout %>
<table>
<thead>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </tr>
</thead>

<tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.body %></td>
      <td><%= link_to 'Show', post %></td>
     
    </tr>
  <% end %>
</tbody>
</table>